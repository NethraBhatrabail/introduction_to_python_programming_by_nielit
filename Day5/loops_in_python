n=5
while n>0:
    
    print(n)
    n=n-1
print('Blastoff')
print(n)
 
 
#infinite loop
n=5
while n>0:
 print('Lather')
 print('Rinse')
print('Dryoff')


#breaking out of loop
while True:
    line=input('> ')
    if line=='done':
        break
    print(line)
print('Done!')
#here if give any input other than done , will be printed and if u give input as done it will come out of the loop and at end it will print Done!


#A simple definite loop
for i in[5,4,3,2,1]:
    print(i)
print('Blastoff!')


#a definite loop with string
friends=['aaa','bbb','ccc']
for friends in friends:
    print('Happy new year:',friends)
print('Done!')


